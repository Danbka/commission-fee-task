{
    "name": "danbka/commission-task",
    "description": "Skeleton recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Danbka\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Danbka\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "nesbot/carbon": "^2.30",
        "ext-bcmath": "*",
        "evp/money": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix --config=./.php_cs",
        "test-cs": "php-cs-fixer fix --dry-run -v --config=./.php_cs",
        "test": ["@phpunit", "@test-cs"]
    }
}
